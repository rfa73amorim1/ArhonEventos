@model IEnumerable<AthonEventos.Models.Palestrante>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PalestranteID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PalestranteDescrição)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PalestranteDescrição)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PalestranteID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PalestranteID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PalestranteID })
            </td>
        </tr>
    }

</table>
